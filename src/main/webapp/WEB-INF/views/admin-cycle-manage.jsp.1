  <script>
  $(function () {
	$('#Appr_Cycle_Form').formValidator();

	$.getJSON("<%=request.getContextPath()%>/employee/types", function (employeeTypes) {
        $.each(employeeTypes, function (index, employeeType) {
        	console.log(employeeType);
            // APPEND OR INSERT DATA TO SELECT ELEMENT.
            //$('<option>').val(employeeType).text(employeeType).appendTo('#AppraisalEligibility_EmployeeType');     
            $('#AppraisalEligibility_EmployeeType').append('<option value="' + employeeType + '">' + employeeType + '</option>');
            //$("#AppraisalEligibility_EmployeeType").selectpicker("refresh");
        });
    });

	$('.datepicker').bootstrapMaterialDatePicker({
	  format: 'DD/MM/YYYY',
	  clearButton: true,
	  weekStart: 1,
	  time: false
	});

	$('#AppraisalCycle_StartDate').change(function(e, date) {
	  $('#AppraisalCycle_EndDate').bootstrapMaterialDatePicker('setMinDate', moment(date).add(1, 'day'));
	});
    $('#AppraisalPhase_StartDate').change(function(e, date) {
      $('#AppraisalPhase_EndDate').bootstrapMaterialDatePicker('setMinDate', moment(date).add(1, 'day'));
	});

	$('#AppraisalPhase_Add').click(function() {
	  // Validate the input fields
	  var phaseName = $('#AppraisalPhase_Name').val();
	  var startDate = $('#AppraisalPhase_StartDate').val();
	  var endDate = $('#AppraisalPhase_EndDate').val();

      var row=$('<tr>');
	  row.append('<td>' + phaseName + '</td>');
	  row.append('<td>' + startDate + '</td>');
	  row.append('<td>' + endDate + '</td>');
	  row.append('<td><i class="material-icons" style="cursor: pointer;" onclick="deleteContainingRow(this)">delete</i></td>');
	  $('#AppraisalPhase_Table > tbody:last-child').append(row);
      //$('#AppraisalPhase_Name').val('');
	  if (endDate) {
		$('#AppraisalPhase_StartDate').val(moment(endDate, 'DD/MM/YYYY').add(1, 'day').format('DD/MM/YYYY'));
	  } else {
	  	$('#AppraisalPhase_StartDate').val();
	  }
	  $('#AppraisalPhase_EndDate').val('');
	});

    $('#AppraisalEligibility_Add').click(function() {
      // Validate the input fields
      var employeeType = $('#AppraisalEligibility_EmployeeType').val();
      var cutoffDate = $('#AppraisalEligibility_CutoffDate').val();
      var row=$('<tr>');
      row.append('<td>' + employeeType + '</td>');
      row.append('<td>' + cutoffDate + '</td>');
      row.append('<td><i class="material-icons" style="cursor: pointer;" onclick="deleteContainingRow(this)">delete</i></td>');
      $('#AppraisalEligibility_Table > tbody:last-child').append(row);
      // TODO clear selected employee types
      $('#AppraisalEligibility_CutoffDate').val('');
    });
  });
  </script>

